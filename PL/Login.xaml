<Window x:Class="PL.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        FlowDirection="RightToLeft">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="1" VerticalAlignment="Center">

            <Label Content="ת.ז משתמש:"/>
            <TextBox Text="{Binding Id, NotifyOnValidationError=true, ValidatesOnExceptions=true}"/>

            <Label Content="סיסמא:"/>
            <TextBox Text="{Binding Password, NotifyOnValidationError=true, ValidatesOnExceptions=true}"/>

            <Button Content="אישור" Margin="0,10" Click="Login_Button_Click"/>
        </StackPanel>

        <StackPanel Grid.Column="1" Visibility="{Binding Role, Converter={StaticResource ConvertManagerToVisibleKey}}">
            <Button Content="ניהול ראשי" Click="mainWindow_Button_Click"/>
            <Button Content="הכנס כמתנדב" Click="volunteerWindow_Button_Click"/>
        </StackPanel>
    </Grid>
</Window>